<header class="nav-header">
    <div class="nav-logo">
        <h2>My Shop</h2>
    </div>
    <nav class="navbar">
        <ul>
            <li>
                <a class="<%= path === 'home' ? 'active' : '' %>" href="/">Home</a>
            </li>
            <li>
                <a class="<%= path === 'customer/products' || path === 'product-detail' ? 'active' : '' %>" href="/products">Products</a>
            </li>
            <%if (isAuthenticated) { %>
                <li>
                    <a class="<%= path === 'cart' || path === 'checkout' ? 'active' : '' %>" href="/cart">Cart</a>
                </li>
                <li>
                    <a class="<%= path === 'orders' ? 'active' : '' %>" href="/orders">Orders</a>
                </li>
                <li>
                    <a class="<%= path === 'admin/products' || path === 'edit-product' ? 'active' : '' %>" href="/admin/products">Admin Products</a>
                </li>
                <li>
                    <form action="/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } else { %>
                <li>
                    <a class="<%= path === 'login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li>
                    <a class="<%= path === 'signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            <% } %>
        </ul>
    </nav>
</header>