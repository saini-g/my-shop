<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
</head>

<body>
    <%- include('../includes/nav.ejs') %>

    <main class="main-container">
        <form class="product-form" action="/admin/<% if (isEdit) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-element">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<% if (isEdit) { %><%= product.title %><% } %>" />
            </div>
            <div class="form-element">
                <label for="imageUrl">Image</label>
                <input type="text" id="imageUrl" name="imageUrl" value="<% if (isEdit) { %><%= product.imageUrl %><% } %>" />
            </div>
            <div class="form-element">
                <label for="price">Price</label>
                <input type="text" id="price" name="price" value="<% if (isEdit) { %><%= product.price %><% } %>" />
            </div>
            <div class="form-element">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="3"><% if (isEdit) { %><%= product.description %><% } %></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <%if (isEdit) { %>
                <input type="hidden" value="<%= product._id %>" name="productId" />
                <div>
                    <a href="/admin/products" class="btn">Cancel</a>
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            <% } else { %>
                <button class="btn btn-primary" type="submit">Add Product</button>
            <% } %>
        </form>
    </main>
<%- include('../includes/end.ejs') %>